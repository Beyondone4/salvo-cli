use askama::Template;
use salvo::{handler, prelude::StatusCode, writing::Text, Depot, FlowCtrl, Request, Response};

{{#if is_web_site}}
#[derive(Template)]
#[template(path = "404.html")]
struct Handle404 {
}

#[handler]
async fn handle_404(&self, _req: &Request, _depot: &Depot, res: &mut Response, ctrl: &mut FlowCtrl) {
    if let Some(StatusCode::NOT_FOUND) = res.status_code {
        let handle_404 = Handle404{};
        res.render(Text::Html(handle_404.render().unwrap()));
        ctrl.skip_rest();
    }
}
{{else}}
#[handler]
async fn handle_404(&self, _req: &Request, _depot: &Depot, res: &mut Response, ctrl: &mut FlowCtrl) {
    if let Some(StatusCode::NOT_FOUND) = res.status_code {
        res.render(Json("404 not found"));
        ctrl.skip_rest();
    }
}
{{/if}}